<!DOCTYPE html>
<html>
    <head>
        <!-- Materialize -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel = "stylesheet" href = "css/main.css">
        {{#if style}}
        <link rel="stylesheet" href="css/{{ style }}">
        {{/if}}
        <!-- Google Fonts-->
        <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
        
        
        
        
    </head>

    <body>
        {{#if stock}}
        <div class="valign-wrapper" style="width:25%;height:90%;position: absolute;">
            <div class="valign" style="width:100%;">
                <div class="container">
                    
                    <div class="col s12">
                        <div class="vertical-menu">
                            <a href = "/dashboard" id="top">Your Stocks</a>
                            {{#each stock}}
                                <a href="/dashboard?ticker={{ticker}}&pba={{pba}}&shares={{amount}}&delete=false" id="stock">{{ticker}} [Purchased {{amount}} shares @ ${{pba}}]</a>
                            {{/each}}
                        </div>
                    </div>
                   
                </div>
                
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col s12 push-s2">                    
                    <div class = "row">
                        <h id="stats">Stats</h>
                    </div>
                    <h4 style="color:white">Current Profit: $89</h4>
                    <h4 style="color:white">Amount Of Stocks Owned: 1</h4>
                    {{#if searchedticker}}
                        {{#if purchaseprice}}
                            {{#if shares}}
                                <div class = "row">
                                    <a class="waves-effect waves-light btn btn-small" id="submitbtn" style="background-color: red; color: white !important; font-size: 15px"  href="/dashboard?ticker={{searchedticker}}&pba={{purchaseprice}}&shares={{shares}}&delete=true">Remove Stock</a>
                                </div>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </div>
            </div>
        </div>

        {{/if}}
                
        <script type="text/javascript" src="js/materialize.min.js"></script>
    </body>
    
</html>